{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "baseBranches": [
    "develop"
  ],
  "enabledManagers": [
    "gradle"
  ],
  "packageRules": [
    {
      "description": "Update Compose dependencies",
      "matchPackagePatterns": [
        "^androidx\\.compose\\.",
        "^org\\.jetbrains\\.compose\\."
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "enabled": true,
      "groupName": "compose dependencies",
      "prBodyNotes": ["Update Compose dependencies"],
      "branchPrefix": "renovate/compose-",
      "labels": ["compose-update"]
    }
  ],
  "ignoreDeps": ["*"],
  "prConcurrentLimit": 1,
  "prHourlyLimit": 0,
  "assignees": [
    "fsanchezdev"
  ]
}

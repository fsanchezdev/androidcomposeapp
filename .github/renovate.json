{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "baseBranches": [
    "develop"
  ],
  "enabledManagers": [
    "github-actions"
  ],
  "ignoreDeps": ["*"],
  "packageRules": [
    {
      "description": "Only update Gradle Wrapper",
      "matchManagers": [
        "github-actions"
      ],
      "enabled": true,
      "prBodyNotes": ["Update Gradle  from {{{currentVersion}}} to {{{newVersion}}}"],
      "prPriority": 5,
      "groupName": "Gradle Wrapper"
    }
  ],
  "assignees": [
    "fsanchezdev"
  ]
}

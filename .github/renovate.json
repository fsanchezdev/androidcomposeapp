{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "baseBranches": [
    "develop"
  ],
  "enabledManagers": [
    "gradle"
  ],
  "packageRules": [
    {
      "description": "Update Kotlin major versions",
      "matchPackagePatterns": [
        "^org\\.jetbrains\\.kotlin"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "enabled": true,
      "groupName": "kotlin major updates",
      "prBodyNotes": ["Update Kotlin from {{{currentVersion}}} to {{{newVersion}}}"]
    }
  ],
  "ignoreDeps": ["*"],
  "prConcurrentLimit": 1,
  "prHourlyLimit": 0,
  "assignees": [
    "fsanchezdev"
  ]
}

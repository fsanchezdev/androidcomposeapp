{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "baseBranches": [
    "develop"
  ],
  "enabledManagers": [
    "gradle-wrapper"
  ],
  "fileMatch": [
    "(^|/)gradle/wrapper/gradle-wrapper\\.properties$"
  ],
  "ignoreDeps": ["*"],
  "packageRules": [
    {
      "description": "Only update Gradle Wrapper",
      "matchManagers": [
        "gradle-wrapper"
      ],
      "matchPackagePatterns": [
        "^gradle$"
      ],
      "enabled": true,
      "prBodyNotes": ["Update Gradle Wrapper from {{{currentVersion}}} to {{{newVersion}}}"],
      "prPriority": 5,
      "groupName": "Gradle Wrapper"
    }
  ],
  "assignees": [
    "fsanchezdev"
  ]
}

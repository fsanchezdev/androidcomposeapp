{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "baseBranches": [
    "develop"
  ],
  "schedule": [
    "before 4am on the first day of the month"
  ],
  "automergeStrategy": "merge-commit",
  "packageRules": [
    {
      "automerge": false,
      "platformAutomerge": false,
      "matchPackagePatterns": [
        "^com.android.tools.build",
        "^com.android.application",
        "^com.android.library"
      ],
      "groupName": "android-gradle-plugin"
    },
    {
      "automerge": false,
      "platformAutomerge": false,
      "matchManagers": ["gradle-wrapper"],
      "groupName": "gradle-wrapper",
      "commitMessagePrefix": "chore(gradle)"
    },
    {
      "automerge": false,
      "platformAutomerge": false,
      "matchPackagePatterns": [
        "^org.jetbrains.kotlin",
        "^com.google.devtools.ksp",
        "^androidx.compose.compiler"
      ],
      "groupName": "kotlin related dependencies"
    },
    {
      "automerge": false,
      "platformAutomerge": false,
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "excludePackagePatterns": [
        "^com.android.tools.build",
        "^com.android.application", 
        "^com.android.library",
        "^org.jetbrains.kotlin",
        "^com.google.devtools.ksp",
        "^androidx.compose.compiler"
      ],
      "excludeManagers": ["gradle-wrapper"],
      "matchManagers": ["gradle"],
      "groupName": "dependencies-minor-patch-digest"
    },
    {
      "automerge": false,
      "platformAutomerge": false,
      "matchManagers": ["github-actions"],
      "groupName": "github-actions-workflows"
    }
  ],
  "assignees": ["fsanchezdev"],
  "semanticCommitScope": "{{parentDir}}",
  "separateMajorMinor": true,
  "enabledManagers": [
    "gradle",
    "gradle-wrapper",
    "github-actions"
  ]
}

{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "baseBranches": [
    "develop"
  ],
  "schedule": [
    "before 4am on the first day of the month"
  ],
  "automergeStrategy": "merge-commit",
  "packageRules": [
    {
      "automerge": false,
      "platformAutomerge": false,
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "groupName": "dependencies-minor-patch-digest"
    },
    {
      "automerge": false,
      "platformAutomerge": false,
      "groupName": "android-gradle-plugin",
      "commitMessagePrefix": "AGP",
      "commitMessageExtra": "from {{currentVersion}} to {{newVersion}}",
      "matchPackageNames": [
        "/^com.android.tools.build/",
        "/^com.android.application/",
        "/^com.android.library/"
      ]
    },
    {
      "automerge": false,
      "platformAutomerge": false,
      "groupName": "kotlin related dependencies",
      "matchPackageNames": [
        "/^org.jetbrains.kotlin/",
        "/^com.google.devtools.ksp/",
        "/^androidx.compose.compiler/"
      ]
    },
    {
      "automerge": false,
      "platformAutomerge": false,
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "github-actions-workflows"
    }
  ],
  "assignees": [
    "fsanchezdev"
  ],
  "semanticCommitScope": "{{parentDir}}",
  "separateMajorMinor": true
}

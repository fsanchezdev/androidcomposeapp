{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "baseBranches": [
    "main"
  ],
  "schedule": [
    "before 4am on Monday"
  ],
  "automerge": true,
  "platformAutomerge": true,
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "groupName": "dependencies-minor-patch-digest-updates",
      "groupSlug": "dependencies-minor-patch-digest-updates"
    }
  ],
  "semanticCommitScope": "{{parentDir}}",
  "separateMajorMinor": true
}
